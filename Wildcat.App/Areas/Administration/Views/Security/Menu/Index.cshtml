@model Wildcat.App.ViewModels.MenuSettingsViewModel
@{
    ViewData["Title"] = "Index";
}

<h4 class="d-flex justify-content-between align-items-center w-100 font-weight-bold py-3 mb-4">
    <div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a class="breadcrumb-item" href="/Home/Index">Home</a>
            </li>
            <li class="breadcrumb-item active">Menu Settings</li>
        </ol>
    </div>
</h4>

<div class="card">

    <h5 class="card-header text-align-center">
        Menu Settings
        @Html.ActionLink("Add Menu Item", "Add", "Menu", null, new { @class = "btn btn-primary pull-right" })
    </h5>
    <div class="card-datatable table-responsive">
        <table id="m_table_2" class="datatables-demo table table-striped table-bordered">
            <thead>
                <tr>
                    <th>App Name</th>
                    <th>Display Name</th>
                    <th>Controller</th>
                    <th>Action</th>
                    <th>Link</th>
                    <th>Active</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<!-- Modal template edit user groups-->
<div class="modal fade" id="modals-default-edit-groups">
    <div class="modal-dialog modal-sm">
        <form class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    Edit User
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">×</button>
            </div>
            <div class="modal-body" id="edit-groups-modal-form">
                <div class="form-row">
                    <ul>
                        @foreach (var groups in Model.GroupAccess)
                        {
                            <li>
                                @{var idd = $"{groups.Menu}|{groups.Group}";}
                                <input id="@idd" class="form-check-input" type="checkbox" value=@(groups.MenuAccess ? "checked" : "") onclick="changeMenuGroupAccess(this)">
                                <div class="form-check-label">@groups.Group</div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </form>
    </div>
</div>

<!-- Modal template  edit user locations-->
<div class="modal fade" id="modals-default-edit-locations">
    <div class="modal-dialog modal-sm">
        <form class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    Edit User
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">×</button>
            </div>
            <div class="modal-body" id="edit-locations-modal-form">
                <div class="form-row">
                    <ul>
                        @foreach (var locations in Model.LocationAccess)
                        {
                            <li>
                                @{var idd = $"{locations.Menu}|{locations.Location}";}
                                <input id="@idd" class="form-check-input" type="checkbox" value=@(locations.MenuAccess ? "checked" : "") onclick="changeMenuLocationAccess(this)">
                                <div class="form-check-label">@locations.Location</div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </form>
    </div>
</div>

@*<script src="/assets/vendor/libs/datatables/datatables.js"></script>*@
<script>

    $('#m_table_2 tbody').on('click', '.editopenbtn', function (e) {
        var id = e.currentTarget.dataset.value;
        $.blockUI({
            message: '<div class="sk-folding-cube sk-primary"><div class="sk-cube1 sk-cube"></div><div class="sk-cube2 sk-cube"></div><div class="sk-cube4 sk-cube"></div><div class="sk-cube3 sk-cube"></div></div><h5 style="color: #444">LOADING...</h5>',
            css: {
                backgroundColor: 'transparent',
                border: '0',
                zIndex: 9999999
            },
            overlayCSS: {
                backgroundColor: '#fff',
                opacity: 0.8,
                zIndex: 9999990
            }
        });

        $.ajax({
            url: "/Administration/Users/EditUserPartial/?ID=" + encodeURIComponent(id),
            type: "GET",
            cache: false,
            success: function (result) {
                $.unblockUI();

                $('#edit-modal-form').html(result.Form.Result);
                $('#modals-default-edit').modal('show');
            },
            error: function (result) {
                $.unblockUI();

                $.growl.error({
                    message: result.statusText
                });
            }

        });

        return false;
    });

    $('#m_table_2 tbody').on('click', '.editlocationsbtn', function (e) {
        var id = e.currentTarget.dataset.value;
        $.blockUI({
            message: '<div class="sk-folding-cube sk-primary"><div class="sk-cube1 sk-cube"></div><div class="sk-cube2 sk-cube"></div><div class="sk-cube4 sk-cube"></div><div class="sk-cube3 sk-cube"></div></div><h5 style="color: #444">LOADING...</h5>',
            css: {
                backgroundColor: 'transparent',
                border: '0',
                zIndex: 9999999
            },
            overlayCSS: {
                backgroundColor: '#fff',
                opacity: 0.8,
                zIndex: 9999990
            }
        });

        $.ajax({
            url: "/Administration/Menu/MenuLocationsPartial/?ID=" + encodeURIComponent(id),
            type: "GET",
            cache: false,
            success: function (result) {
                $.unblockUI();

                $('#edit-locations-modal-form').html(result.Form.Result);
                $('#modals-default-edit-locations').modal('show');
            },
            error: function (result) {
                $.unblockUI();

                $.growl.error({
                    message: result.statusText
                });
            }

        });

        return false;
    });

    $('#m_table_2 tbody').on('click', '.editgroupsbtn', function (e) {
        var id = e.currentTarget.dataset.value;
        $.blockUI({
            message: '<div class="sk-folding-cube sk-primary"><div class="sk-cube1 sk-cube"></div><div class="sk-cube2 sk-cube"></div><div class="sk-cube4 sk-cube"></div><div class="sk-cube3 sk-cube"></div></div><h5 style="color: #444">LOADING...</h5>',
            css: {
                backgroundColor: 'transparent',
                border: '0',
                zIndex: 9999999
            },
            overlayCSS: {
                backgroundColor: '#fff',
                opacity: 0.8,
                zIndex: 9999990
            }
        });

        $.ajax({
            url: "/Administration/Menu/MenuGroupsPartial/?ID=" + encodeURIComponent(id),
            type: "GET",
            cache: false,
            success: function (result) {
                $.unblockUI();

                $('#edit-groups-modal-form').html(result.Form.Result);
                $('#modals-default-edit-groups').modal('show');
            },
            error: function (result) {
                $.unblockUI();

                $.growl.error({
                    message: result.statusText
                });
            }

        });

        return false;
    });

        function changeMenuGroupAccess(e) {
        var userid = e.id.split("|")[0];
        var groupid = e.id.split("|")[1];

        $.ajax({
            url: 'EditSecurityGroupsResult',
            type: "GET",
            cache: false,
            data: {
                ID: userid,
                Group: groupid,
                check: e.checked
            },
            success: function (result) {
                if (result.success) {
                    $.growl.notice({
                        message: result.message
                    });
                }
                else {
                    $.growl.error({
                        message: result.message
                    });
                }
            },
            error: function (result) {
                $.unblockUI();

                $.growl.error({
                    message: result.statusText
                });
            }
        });
    }

    function changeMenuLocationAccess(e) {
        var userid = e.id.split("|")[0];
        var location = e.id.split("|")[1];

        $.ajax({
            url: 'EditLocationResult',
            type: "GET",
            cache: false,
            data: {
                ID: userid,
                Location: location,
                check: e.checked
            },
            success: function (result) {
                if (result.success) {
                    $.growl.notice({
                        message: result.message
                    });
                }
                else {
                    $.growl.error({
                        message: result.message
                    });
                }
            },
            error: function (result) {
                $.unblockUI();

                $.growl.error({
                    message: result.statusText
                });
            }
        });
    }

    function resetNewForm() {
        //Set Default value to dropdownlist
        $('select').each(function () {
            $(this).find('option:eq(0)').prop("selected", "selected");
        });
        //Clear the values from textboxes
        $('input:text').each(function () {
            $(this).val("");
        });
    }

    function datatable() {
        $('#m_table_2').dataTable({
            "processing": true,
            "serverSide": true,
            //"search":
            //"info": true,
            //"stateSave": true,
            "lengthMenu": [[10, 20, 50, -1], [10, 20, 50, "All"]],
            "ajax": {
                "url": "/Administration/Security/Menu/AjaxGetJsonData",
                "type": "POST"
            },
            "language": {
                "search": "",
                "searchPlaceholder": "Search..."
            },
            "columns": [
                { "data": "AppName", "orderable": true },
                { "data": "DisplayName", "orderable": true },
                { "data": "ControllerName", "orderable": true },
                { "data": "ActionName", "orderable": true },
                { "data": "Link", "orderable": true },
                { "data": "Active", "orderable": true },
                {
                    "data": null,
                    "className": "text-center",
                    "render": function (data, type, item) {
                        return '<a type="button" style="text-align:center;margin:0 auto;" class="btn btn-primary btn-sm openbtn" href=/Administration/Menu/Edit?Id=' + data.Id.trim() + '>EDIT</a> | <a href="#" data-value=' + data.Id.trim() + ' type="button" style="text-align:center;margin:0 auto;" class="btn btn-primary btn-sm openbtn editlocationsbtn">LOCATIONS</a>  | <a href="#" data-value=' + data.Id.trim() + ' type="button" style="text-align:center;margin:0 auto;" class="btn btn-primary btn-sm openbtn editgroupsbtn">GROUPS</a>';
                    },
                    "orderable": false
                }
            ],
            "order": [[0, "asc"]]
        });

    }

    $(document).ready(function () {
        datatable()
    });
</script>

