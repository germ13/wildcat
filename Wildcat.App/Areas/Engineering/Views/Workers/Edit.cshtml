                </div>
                <div class="form-group">
                    <label asp-for="Updated" class="control-label"></label>
                    <input asp-for="Updated" class="form-control" />
                    <span asp-validation-for="Updated" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UpdatedByEndUserId" class="control-label"></label>
                    <input asp-for="UpdatedByEndUserId" class="form-control" />
                    <span asp-validation-for="UpdatedByEndUserId" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" ac />
            </div>
