<script>
    document.getElementById("ShiftStart").classList.add("form-control");
    document.getElementById("ShiftEnd").classList.add("form-control");
    //document.getElementById("Active").classList.add("form-control");

    function buildWorkingDays(e, k) {
        var result = "";
        for (var i = 1; i < 8; i++) {
            var checkbox = document.getElementById("id_check_" + i);
            if (checkbox.checked == true) {
                result += i;
            }
            document.getElementById("DaysOfWeek").value = result;
        }
    }
</script>