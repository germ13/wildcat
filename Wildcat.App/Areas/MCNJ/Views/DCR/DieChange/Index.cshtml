<h4 class="d-flex justify-content-between align-items-center w-100 font-weight-bold py-3 mb-4">
    <div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a class="breadcrumb-item" href="/Home/Index">Home</a>
            </li>
            <li class="breadcrumb-item active">Die Change Requests</li>
        </ol>
    </div>
</h4>

<div class="card">

    <h5 class="card-header text-align-center">
        Die Change Requests
        <button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#modals-default">New DCR</button>
    </h5>
    <div class="card-datatable table-responsive">
        <table class="datatables-demo table table-striped table-bordered display nowrap" id="m_table_2">
            <thead>
                <tr>
                    <th>DCRNumber</th>
                    <th>Tool Number</th>
                    <th>Unit</th>
                    @*<th>Reason</th>
                    <th>Description</th>*@
                    <th>Eng Approval</th>
                    <th>Hold Production</th>
                    <th>Tools Changed</th>
                    <th>DateRequired</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model.DCR)
                {
                    <tr>
                        @*<td>@i.Date</td>
                            <td>@i.BatchNo</td>
                            <td>@i.Customer</td>
                            <td>@i.WorkOrder</td>
                            <td>@i.DieNo</td>
                            <td>@i.Qty</td>
                            <td>@i.HeatCode</td>
                            <td>@i.Htno</td>
                            <td>@i.MatL</td>
                            <td>@i.Weight</td>
                            <td>@i.Furnace</td>
                            <td>@i.Cycle</td>
                            <td style="text-align:center;">
                                <a href="#" data-value="@i.RunKey" style="display:block;margin:auto;" class="btn btn-primary btn-sm openbtn editopenbtn">Edit</a>
                            </td>*@
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal template -->
<div class="modal fade" id="modals-default">
    <div class="modal-dialog modal-lg">
        <form class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    Die Change Request
                    <br>
                    <small class="text-muted">New Die Change Request.</small>
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">×</button>
            </div>
            <div class="modal-body" id="add-modal-form">
                @Html.HiddenFor(x => x.AddDCR.Dcrnumber, new { @class = "form-control", @readonly = "readonly", @id = "AddDCRNumber" })
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="form-label">Requested By</label>
                        @Html.DropDownListFor(x => x.AddDCR.RequestedBy, Model.RequestedBy, new { @class = "custom-select", @style = "btn-default", @id = "AddRequestedBy" })
                    </div>
                    <div class="form-group col-md-6">
                        <label class="form-label">Requested Date:</label>
                        @Html.TextBoxFor(x => x.AddDCR.RequestedDate, new { @class = "form-control", @id = "AddRequestedDate" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label class="form-label">Tool Number:</label>
                        @Html.TextBoxFor(x => x.AddDCR.ToolNumber, new { @class = "form-control", @id = "AddToolNumber" })
                    </div>
                    <div class="form-group col-md-4">
                        <label class="form-label">SP/Hammer:</label>
                        @Html.DropDownListFor(x => x.AddDCR.Unit, Model.Units, new { @class = "custom-select", @style = "btn-default", @id = "AddUnit" })
                    </div>
                    <div class="form-group col-md-4">
                        <label class="form-label">Date Required:</label>
                        @Html.TextBoxFor(x => x.AddDCR.DateRequired, new { @class = "form-control", @id = "AddDateRequired" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label class="form-label">Reason:</label>
                        @Html.TextAreaFor(x => x.AddDCR.Reason, new { @class = "form-control", @rows = 4, @id = "AddReason" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label class="form-label">Description:</label>
                        @Html.TextAreaFor(x => x.AddDCR.Description, new { @class = "form-control", @rows = 4, @id = "AddDescription" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label class="form-label">Eng Approval:</label>
                        @Html.TextBoxFor(x => x.AddDCR.EngApproval, new { @class = "form-control", @id = "AddEngApproval" })
                    </div>
                    <div class="form-group col-md-4">
                        <label class="form-label">Approval Signature:</label>
                        @Html.DropDownListFor(x => x.AddDCR.EngApprovalSignature, Model.Approvals, new { @class = "custom-select", @style = "btn-default", @id = "AddEngApprovalSignature" })
                    </div>
                    <div class="form-group col-md-4">
                        <label class="form-label">Approval Date:</label>
                        @Html.TextBoxFor(x => x.AddDCR.EngApprovalDate, new { @class = "form-control", @id = "AddEngApprovalDate" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="form-label">Tools Changed? (yes/No):</label>
                        @Html.TextBoxFor(x => x.AddDCR.ToolsChangedYesOrNo, new { @class = "form-control", @id = "AddToolsChangedYesOrNo" })
                    </div>
                    <div class="form-group col-md-6">
                        <label class="form-label">Hold Production? (yes/No):</label>
                        @Html.TextBoxFor(x => x.AddDCR.HoldProductionYesOrNo, new { @class = "form-control", @id = "AddHoldProductionYesOrNo" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="form-label">Die Shop Signature:</label>
                        @Html.TextBoxFor(x => x.AddDCR.DieShopSignature, new { @class = "form-control", @id = "AddDieShopSignature" })
                    </div>
                    <div class="form-group col-md-6">
                        <label class="form-label">Die Shop Signature Date:</label>
                        @Html.TextBoxFor(x => x.AddDCR.DieShopSignatureDate, new { @class = "form-control", @id = "AddDieShopSignatureDate" })
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" id="savenew">Save</button>
            </div>
        </form>
    </div>
</div>

