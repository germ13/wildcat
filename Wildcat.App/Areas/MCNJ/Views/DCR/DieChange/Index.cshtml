<script>

    $('#m_table_2 tbody').on('click', '.editopenbtn', function (e) {
        var id = e.currentTarget.dataset.value;
        $.blockUI({
            message: '<div class="sk-folding-cube sk-primary"><div class="sk-cube1 sk-cube"></div><div class="sk-cube2 sk-cube"></div><div class="sk-cube4 sk-cube"></div><div class="sk-cube3 sk-cube"></div></div><h5 style="color: #444">LOADING...</h5>',
            css: {
                backgroundColor: 'transparent',
                border: '0',
                zIndex: 9999999
            },
            overlayCSS: {
                backgroundColor: '#fff',
                opacity: 0.8,
                zIndex: 9999990
            }
        });

        $.ajax({
            url: "/MCNJ/DCR/DieChange/EditRequestPartial/?ID=" + encodeURIComponent(id),
            type: "GET",
            cache: false,
            success: function (result) {
                $.unblockUI();

                $('#edit-modal-form').html(result.Form.Result);
                $('#modals-default-edit').modal('show');
            },
            error: function (result) {
                $.unblockUI();

                $.growl.error({
                    message: result.statusText
                });
            }

        });

        return false;
    });

    $('#savenew').click(function () {
        $.blockUI({
            message: '<div class="sk-folding-cube sk-primary"><div class="sk-cube1 sk-cube"></div><div class="sk-cube2 sk-cube"></div><div class="sk-cube4 sk-cube"></div><div class="sk-cube3 sk-cube"></div></div><h5 style="color: #444">LOADING...</h5>',
            css: {
                backgroundColor: 'transparent',
                border: '0',
                zIndex: 9999999
            },
            overlayCSS: {
                backgroundColor: '#fff',
                opacity: 0.8,
                zIndex: 9999990
            }
        });

        var Dcrnumber = $('#AddDCRNumber').val();
        var RequestedBy = $('#AddRequestedBy').val()
        var RequestedDate = $('#AddRequestedDate').val();
        var ToolNumber = $('#AddToolNumber').val();
        var Unit = $('#AddUnit').val();
        var DateRequired = $('#AddDateRequired').val();
        var Reason = $('#AddReason').val();
        var Description = $('#AddDescription').val();
        var EngApproval = $('#AddEngApproval').val();
        var EngApprovalSignature = $('#AddEngApprovalSignature').val();
        var EngApprovalDate = $('#AddEngApprovalDate').val();
        var ToolsChangedYesOrNo = $('#AddToolsChangedYesOrNo').val();
        var HoldProductionYesOrNo = $('#AddHoldProductionYesOrNo').val();
        var DieShopSignature = $('#AddDieShopSignature').val();
        var DieShopSignatureDate = $('#AddDieShopSignatureDate').val();

        $.ajax({
            url: "/MCNJ/DCR/DieChange/AddResult",
            type: "POST",
            data: { Dcrnumber: Dcrnumber, ToolNumber: ToolNumber, Unit: Unit, EngApproval: EngApproval, EngApprovalSignature: EngApprovalSignature, EngApprovalDate: EngApprovalDate, DateRequired: DateRequired, HoldProductionYesOrNo: HoldProductionYesOrNo, ToolsChangedYesOrNo: ToolsChangedYesOrNo, DieShopSignature: DieShopSignature, DieShopSignatureDate: DieShopSignatureDate, Reason: Reason, Description: Description, RequestedBy: RequestedBy, RequestedDate: RequestedDate },
            cache: false,
            success: function (result) {
                $.unblockUI();

                if (result.success) {
                    $.growl.notice({
                        message: result.message
                    });
                    var mytbl = $("#m_table_2").DataTable();
                    mytbl.ajax.reload(null, false);
                    resetNewForm();
                    $('#modals-default').modal('toggle');
                }
                else {
                    $.growl.error({
                        message: result.message
                    });
                }


            },
            error: function (result) {
                $.unblockUI();

                $.growl.error({
                    message: result.statusText
                });
            }

        });


        return false;
    });

    $('#saveedit').click(function () {
        $.blockUI({
            message: '<div class="sk-folding-cube sk-primary"><div class="sk-cube1 sk-cube"></div><div class="sk-cube2 sk-cube"></div><div class="sk-cube4 sk-cube"></div><div class="sk-cube3 sk-cube"></div></div><h5 style="color: #444">LOADING...</h5>',
            css: {
                backgroundColor: 'transparent',
                border: '0',
                zIndex: 9999999
            },
            overlayCSS: {
                backgroundColor: '#fff',
                opacity: 0.8,
                zIndex: 9999990
            }
        });

        var Dcrnumber = $('#EditDCRNumber').val();
        var RequestedBy = $('#EditRequestedBy').val()
        var RequestedDate = $('#EditRequestedDate').val();
        var ToolNumber = $('#EditToolNumber').val();
        var Unit = $('#EditUnit').val();
        var DateRequired = $('#EditDateRequired').val();
        var Reason = $('#EditReason').val();
        var Description = $('#EditDescription').val();
        var EngApproval = $('#EditEngApproval').val();
        var EngApprovalSignature = $('#EditEngApprovalSignature').val();
        var EngApprovalDate = $('#EditEngApprovalDate').val();
        var ToolsChangedYesOrNo = $('#EditToolsChangedYesOrNo').val();
        var HoldProductionYesOrNo = $('#EditHoldProductionYesOrNo').val();
        var DieShopSignature = $('#EditDieShopSignature').val();
        var DieShopSignatureDate = $('#EditDieShopSignatureDate').val();

        $.ajax({
            url: "/MCNJ/DCR/DieChange/EditResult",
            type: "POST",
            data: { Dcrnumber: Dcrnumber, ToolNumber: ToolNumber, Unit: Unit, EngApproval: EngApproval, EngApprovalSignature: EngApprovalSignature, EngApprovalDate: EngApprovalDate, DateRequired: DateRequired, HoldProductionYesOrNo: HoldProductionYesOrNo, ToolsChangedYesOrNo: ToolsChangedYesOrNo, DieShopSignature: DieShopSignature, DieShopSignatureDate: DieShopSignatureDate, Reason: Reason, Description: Description, RequestedBy: RequestedBy, RequestedDate: RequestedDate },
            cache: false,
            success: function (result) {
                $.unblockUI();

                if (result.success) {
                    $.growl.notice({
                        message: result.message
                    });
                    var mytbl = $("#m_table_2").DataTable();
                    mytbl.ajax.reload(null, false);
                    $('#modals-default-edit-form').trigger('reset')
                    $('#modals-default-edit').modal('toggle');

                }
                else {
                    $.growl.error({
                        message: result.message
                    });
                }


            },
            error: function (result) {
                $.unblockUI();

                $.growl.error({
                    message: result.statusText
                });
            }

        });


        return false;
    });

    function resetNewForm() {
        //Set Default value to dropdownlist
        $('select').each(function () {
            $(this).find('option:eq(0)').prop("selected", "selected");
        });
        //Clear the values from textboxes
        $('input:text').each(function () {
            $(this).val("");
        });
    }

    function datatable()
    {
        $('#m_table_2').dataTable({
            "processing": true,
            "serverSide": true,
            //"search":
            //"info": true,
            //"stateSave": true,
            "lengthMenu": [[10, 20, 50, -1], [10, 20, 50, "All"]],
            "ajax": {
                "url": "/MCNJ/DCR/DieChange/AjaxGetJsonData",
                "type": "POST"
            },
            "language": {
                "search": "",
                "searchPlaceholder": "Search..."
            },
            "columns": [
                { "data": "Dcrnumber", "orderable": true },
                { "data": "ToolNumber", "orderable": true },
                { "data": "Unit", "orderable": true },
                { "data": "EngApproval", "orderable": true },
                { "data": "HoldProductionYesOrNo", "orderable": true },
                { "data": "ToolsChangedYesOrNo", "orderable": true },
                { "data": "DateRequired", "orderable": false },
                {
                    "data": null,
                    "className": "text-center",
                    "render": function (data, type, item) {
                        return '<a href="#" data-value=' +data.Dcrnumber + ' type="button" style="text-align:center;margin:0 auto;" class="btn btn-primary btn-sm openbtn editopenbtn">EDIT</a>';
                    },
                    "orderable": false
                }
            ],
            "order": [[0, "asc"]]
        });

    }

    $(document).ready(function () {
        datatable()
    });

</script>