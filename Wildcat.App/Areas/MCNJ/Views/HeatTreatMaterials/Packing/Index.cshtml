@{
    ViewData["Title"] = "Index";
}

<h4 class="d-flex justify-content-between align-items-center w-100 font-weight-bold py-3 mb-4">
    <div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a class="breadcrumb-item" href="/Home/Index">Home</a>
            </li>
            <li class="breadcrumb-item active">Packing Slips</li>
        </ol>
    </div>
</h4>

<div class="card">

    <h5 class="card-header text-align-center">
        Packing Slips
        @Html.ActionLink("New Packing Slip", "Add", "Packing", null, new { @class = "btn btn-primary pull-right" })
        @*<button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#modals-default">New Job</button>*@
    </h5>
    <div class="card-datatable table-responsive">
        @*@await Component.InvokeAsync("RawScanJobs", new { _vm = Model })*@
