                    <th>PSN</th>
                    <th>McW-CN</th>
                    <th>Die</th>
                    <th>Work Order</th>
                    <th>Cust-PO</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model)
                {
                <tr>
                    <td>@i.Psn</td>
                    <td>@i.McWCn</td>
                    <td>@i.Die</td>
                    <td>@i.WorkOrder</td>
                    <td>@i.CustPo</td>
                    <td>@i.Date.Value.ToShortDateString()</td>
                    <td style="text-align:center;">
                        <button type="button" style="display:block;margin:auto;" class="btn btn-primary btn-sm openbtn" onclick="location.href='@Url.Action("Edit", "Packing", new { PSN = i.Psn })'">EDIT</button>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

