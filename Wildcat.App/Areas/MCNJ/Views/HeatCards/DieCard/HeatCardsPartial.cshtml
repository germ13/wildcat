@model List<Wildcat.Entities.MCNJ.SecureHeatCards.TblHeatCard>

@foreach (var i in Model)
{
    <tr>
        <td>@i.DieNumber</td>
        <td>@i.NucPrefix</td>
        <td>@i.HeatCode</td>
        <td>@i.HeatNumber</td>
        <td>@i.ShopOrderNumber</td>
        <td>@i.QuantityOrderedCut</td>
        <td>@i.Range</td>
        <td>@i.Notes</td>
        <td style="text-align:center;">
            <a href="#" onclick="editopenclick(@i.Hcn)" data-value="@i.Hcn" class="btn btn-primary btn-sm openbtn editrecordbtn">EDIT</a>
        </td>
    </tr>
}

