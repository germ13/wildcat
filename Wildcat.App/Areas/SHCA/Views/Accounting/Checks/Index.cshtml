@model Wildcat.App.SHCA.ViewModels.Accounting.ChecksIndexViewModel
@{
    ViewData["Title"] = "Check Runs";
}

<h4 class="d-flex justify-content-between align-items-center w-100 font-weight-bold py-3 mb-4">
    <div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a class="breadcrumb-item" href="/Home/Index">Home</a>
            </li>
            <li class="breadcrumb-item active">Accounting Check Runs</li>
        </ol>
    </div>
</h4>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <h6 class="card-header">
                Grinder Data
            </h6>
            <div class="card-body">
                <form id="submitform">
                    <div class="form-row">
                        <div class="form-group col-md-2">
                            <label class="form-label">Select Grinder</label>
                            @Html.DropDownListFor(x => x.CheckRunSelect, Model.CheckRunSelect, new { @id = "CheckRunSelect", @class = "custom-select", @style = "btn-default" })
                        </div>
                    </div>
                </form>
                <br />
                <div class="card-datatable table-responsive" id="tableholder">
                    <table class="datatables-demo table table-striped table-bordered display nowrap" id="m_table_2">
                        <thead>
                            <tr>
                                <th>Invoice #</th>
                                <th>Vendor #</th>
                                <th>Vendor Name</th>
                                <th>Check #</th>
                                <th>Invoice Amt</th>
                                <th>Remarks</th>
                                <th>Connexion Date</th>
                                <th>Date Added</th>
                                <th>Date Updated</th>
                            </tr>
                        </thead>
                        <tbody id="tbody">
                            @*@foreach (var item in Model.DTO.OrderByDescending(x => x.Timestamp))
                                {
                                    <tr>
                                        <td data-sort="YYYYMMDD">@item.Timestamp</td>
                                        <td>@Html.DisplayFor(modelItem => item.Value)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    </tr>
                                }*@
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
