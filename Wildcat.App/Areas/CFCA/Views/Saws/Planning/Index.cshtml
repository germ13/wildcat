@model Wildcat.App.ViewModels.Planning.PlanningModel

    <div class="container-fluid flex-grow-1 container-p-y">

        <div>
            <h4 class="d-flex justify-content-between align-items-center w-100 font-weight-bold py-3 mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a class="breadcrumb-item" href="/Home/Index">Home</a>
                    </li>
                    <li class="breadcrumb-item active">
                        Planning Distribution
                    </li>
                </ol>
            </h4>
        </div>

        <div class="row">
            <div class="col-xl-12">
                <div class="card mb-4 text-left">
                    <div class="card-body">
                        <div class="demo-inline-spacing mt-sm-3">

                            <label class="form-check-inline">
                                <input type="text" class="form-control" id="discreteJobNumber" placeholder="Discrete Job Number" asp-for="DiscreteJobNumber">
                            </label>

                            <label class="form-check-inline">
                                <button id="GetJob" type="submit" class="btn btn-primary">Load</button>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="divJob">
            <partial name="JobDetailPartial" />
        </div>

        <form asp-controller="Planning" asp-action="Search" data-bind="true" data-ajax-success="onSearchSubmitSuccess" data-ajax-failure="onSearchSubmitFailed" data-ajax-mode="replace" data-ajax="true" data-ajax-method="GET">

            <div id="divMaterial">
                <partial name="MaterialCodePartial" />
            </div>

            <div class="row">
                <div class="col-xl-12">
                    <div class="card mb-4 text-left">
                        <div class="card-body">
                            <div class="demo-inline-spacing mt-sm-3">

                                <label class="form-check-inline">
                                    <input type="checkbox" class="form-check-input" asp-for="SearchUnusableBillets" />
                                    <span class="form-check-label">
                                        Include Unusable Billets
                                    </span>
                                </label>
                                <label class="form-check-inline">
                                    @Model.Dropdown("ddlTest", Model.TestCategoryOptions, "Test")
                                </label>

                                <label class="form-check-inline">
                                    @Model.Dropdown("ddlUnit", Model.UnitTypeOptions, "Unit")
                                </label>

                                @*Table has built in sort*@
                                @*<label class="form-check-inline">
                                    @Model.Dropdown("ddlSort", Model.SortOptions, "Sort By")
                                </label>*@

                                <label class="form-check-inline">
                                    <button type="submit" class="btn btn-primary">Search</button>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </form>

        <div id="divSearchResult">
            <partial name="SearchResultPartial" />
        </div>

