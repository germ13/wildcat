                </label>
                <label class="btn btn-sm btn-outline-secondary" style="width: 67px; height: 20px;">
                    <input type="checkbox">
                </label>
            </div>
        </div>*@

        @*<div class="demo-vertical-spacing-sm">
            <div class="btn-group btn-group-toggle" data-toggle="buttons">
                <label class="btn btn-sm btn-primary" style="width: 80px; height: 20px;">
                    <input type="checkbox">

                </label>
                <label class="btn btn-sm btn-outline-secondary" style="width: 20px; height: 20px;">
                    <input type="checkbox">
                </label>
            </div>
        </div>*@

        <div class="row">
            <div class="col-md">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Bar Distribution</h5>
                        <p class="card-text">
                            <div id="barDiv" class="barDistribution"></div>
                            <div id='colorSample1' class='bg-primary-dark'></div>
                            <div id='colorSample2' class='bg-secondary-dark'></div>

                            <div id='colorSample3' class='btn-primary'></div>
                            <div id='colorSample4' class='btn-secondary'></div>

                            <div id='colorSample5' class='bg-primary-darker'></div>
                            <div id='colorSample6' class='bg-secondary-darker'></div>
                        </p>

                        <div class="demo-inline-spacing mt-sm-3">
                            <button id="cuttingTicketButton" type="button" class="btn btn-primary" onclick="CuttingTicketClick();">Cutting Ticket</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

