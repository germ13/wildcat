@model Wildcat.App.ViewModels.PCC03.Integrations.RequestsViewModel
@{
    ViewData["Title"] = "Integration Requests";
}

<h4 class="d-flex justify-content-between align-items-center w-100 font-weight-bold py-3 mb-4">
    <div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a class="breadcrumb-item" href="/Home/Index">Home</a>
            </li>
            <li class="breadcrumb-item active">Requests</li>
        </ol>
    </div>
</h4>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <h6 class="card-header">
                Integration Requests
            </h6>
            <div class="card-body">
                <form id="submitform">
                    <div class="form-row">
                        <div class="form-group col-md-2">
                            <label class="form-label">Select Integration Point</label>
                            @Html.DropDownListFor(x => x.IntPoints, Model.IntPoints, new { @id = "IntegrationSelect", @class = "custom-select", @style = "btn-default" })
                        </div>
                    </div>
                </form>
                <br />
                <div class="card-datatable table-responsive" id="tableholder">
                    <table class="datatables-demo table table-striped table-bordered display nowrap" id="m_table_2">
                        <thead>
                            <tr>
                                <th>Oracle Id</th>
                                <th>PCC03 Id</th>
                                <th>Json</th>
                                <th>JsonChild</th>
                                <th>Response</th>
                                <th>Exception</th>
                                <th>Status</th>
                                <th>Added</th>
                                <th>Updated</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="tbody">
                            @*@foreach (var item in Model.DTO.OrderByDescending(x => x.Timestamp))
                                {
                                    <tr>
                                        <td data-sort="YYYYMMDD">@item.Timestamp</td>
                                        <td>@Html.DisplayFor(modelItem => item.Value)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    </tr>
                                }*@
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal template -->
<div class="modal fade" id="modals-json">
    <div class="modal-dialog modal-lg">
        <form class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    JSON Object
                    <br>
                    <small class="text-muted">JSON Object.</small>
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">×</button>
            </div>
            <div class="modal-body" id="json-modal-form">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                @*<button type="submit" class="btn btn-primary" id="savenew">Save</button>*@
            </div>
        </form>
    </div>
</div>

<!-- Modal template -->
<div class="modal fade" id="modals-response">
    <div class="modal-dialog modal-lg">
        <form class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    RESPONSE Object
                    <br>
                    <small class="text-muted">RESPONSE Object.</small>
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">×</button>
            </div>
            <div class="modal-body" id="response-modal-form">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                @*<button type="submit" class="btn btn-primary" id="savenew">Save</button>*@
            </div>
        </form>
    </div>
</div>


